{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "declarationDir": "dist/types",
    "declaration": true,
    "target": "ES2022",
    "module": "esnext",
    "strict": true,
    "jsx": "react"
  },
  "include": [
    "index.d.ts",
    "custom.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "example",
    "dist"
  ]
}
